<!DOCTYPE html>
<html dir="{{ direction }}" lang="{{ lang }}">

<head>
	<meta charset="utf-8">
	<title>{{ title }}</title>
	<meta content="width=device-width, initial-scale=1.0" name="viewport">

	<base href="{{ base }}" />
	{% if description %}
	<meta name="description" content="{{ description }}" />
	{% endif %}
	{% if keywords %}
	<meta name="keywords" content="{{ keywords }}" />
	{% endif %}

	<script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>

	<!-- Google Web Fonts -->
	<link rel="preconnect" href="https://fonts.gstatic.com">
	<link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">

	<!-- Font Awesome -->
	<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet">

	<!-- Libraries Stylesheet -->
	<link href="catalog/view/theme/multishop/assets/lib/animate/animate.min.css" rel="stylesheet">
	<link href="catalog/view/theme/multishop/assets/lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet">

	{% for style in styles %}
	<link href="{{ style.href }}" type="text/css" rel="{{ style.rel }}" media="{{ style.media }}" />
	{% endfor %}
	{% for script in scripts %}
	<script src="{{ script }}" type="text/javascript"></script>
	{% endfor %}

	<!-- Customized Bootstrap Stylesheet -->
	<link href="catalog/view/theme/multishop/assets/css/style.css" rel="stylesheet">

	{% for link in links %}
	<link href="{{ link.href }}" rel="{{ link.rel }}" />
	{% endfor %}
	{% for analytic in analytics %}
	{{ analytic }}
	{% endfor %}


	<style>
  .gallery {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-around;
  }
  .gallery img {
    flex: 1 1 200px; /* Растягивание до 1/4 ширины экрана, минимальный размер 200px */
    margin: 5px;
    max-width: 100%; /* Для предотвращения выхода за пределы контейнера */
  }
  .full-width {
    flex: 0 0 100%; /* Не растягивается, не сжимается, всегда 100% ширины */
  }
</style>
</head>

<body>
	<!-- Topbar Start -->
	{# Начало верхней панели #}
	<div class="container-fluid">
		<div class="row bg-secondary py-1 px-xl-5">
			<div class="col-lg-6 d-none d-lg-block">
			{# Колонка, видимая только на больших экранах #}
			</div>
			<div class="col-lg-6 text-center text-lg-right">
				<div class="d-inline-flex align-items-center">
					<div class="btn-group">
						<button type="button" class="btn btn-sm btn-light dropdown-toggle" data-toggle="dropdown">
						{{ text_my_ac }}  </button>
						<div class="dropdown-menu dropdown-menu-right">
							{# Выпадающее меню #}
							{% if logged %}
								{# Если пользователь вошел в систему #}
								<a class="dropdown-item" href="{{ account }}">{{ text_account }}</a>
								<a class="dropdown-item" href="{{ logout }}">{{ text_logout }}</a>
							{% else %}
								{# Если пользователь не вошел в систему #}
								<a class="dropdown-item" href="{{ register }}">{{ text_register }}</a>
								<a class="dropdown-item" href="{{ login }}">{{ text_login }}</a>
							{% endif %}
						</div>
					</div>
					{# Виджет для выбора языка #}
					{{ language }}
				</div>
				{# Ссылка-кнопка для избранного #}
				<div class="d-inline-flex align-items-center">
					<a href="{{ wishlist }}" class="btn px-0 ml-2">
						<i class="fas fa-heart text-dark"></i>
						<span class="badge text-dark border border-dark rounded-circle"
							style="padding-bottom: 2px;" id="wishlist-total">{{ text_wishlist }}</span>
					</a>
					{# Виджет дневника #}
					{{ cart }}
				</div>
			</div>
		</div>
		<!-- LOGO -->
		<div class="row align-items-center bg-light py-3 px-xl-5 d-none d-lg-flex">
			<div class="col-lg-4"> 
				<a href="{{ base }}" class="text-decoration-none">
					<span class="h1 text-uppercase text-primary px-2">CODE BIRDY</span>
					<!--<span class="h1 text-uppercase text-dark bg-primary px-2 ml-n1">BIRDY</span>-->
				</a>
			</div>
			{# Виджет поиска #}
			<div class="col-lg-4 col-6 text-left header-search">
				{{ search }}
			</div>
			 
			<div class="col-lg-4 col-6 text-right">
			</div>
 			
		</div>
	</div>
	<!-- Topbar End -->


	<!-- Navbar Start -->
	<div class="container-fluid bg-dark mb-30">
		<div class="row px-xl-5">
			<div class="col-lg-3">
			{% if logged %}
			{# Виджет меню #}
				{{ menu }}
			{% endif %}
			</div>
			<div class="col-lg-9">
				<nav class="navbar navbar-expand-lg bg-dark navbar-dark py-3 py-lg-0 px-0">
					<a href="" class="text-decoration-none d-block d-lg-none">
						<span class="h1 text-uppercase text-dark bg-light px-2">CODE BIRDY</span>
						<!-- <span class="h1 text-uppercase text-light bg-primary px-2 ml-n1">Shop</span>-->
					</a>
					{# Кнопка для открытия меню на маленьких экранах #}
					<button type="button" class="navbar-toggler" data-toggle="collapse" data-target="#navbarCollapse">
						<span class="navbar-toggler-icon"></span>
					</button>
					<div class="collapse navbar-collapse justify-content-between" id="navbarCollapse">
						<div class="navbar-nav mr-auto py-0">
							{# Виджет навигационного меню #}
							{{ navbar_menu }}
						</div>
					</div>
				</nav>
			</div>
		</div>
	</div>
	<!-- Navbar End -->